@model FitnessCenterProject.Models.AIRecommendationRequest

@{
    ViewData["Title"] = "AI Fitness Önerisi";
}

<h1>AI Fitness ve Beslenme Önerisi</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="GetRecommendation" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" type="number" step="0.1" placeholder="Örn: 175" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" type="number" step="0.1" placeholder="Örn: 70" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" type="number" placeholder="Örn: 25" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="Erkek">Erkek</option>
                    <option value="Kadın">Kadın</option>                  
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Goal" class="control-label"></label>
                <select asp-for="Goal" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="Kilo Verme">Kilo Verme</option>
                    <option value="Kas Kazanma">Kas Kazanma</option>
                    <option value="Genel Fitness">Genel Fitness</option>
                    <option value="Dayanıklılık Artırma">Dayanıklılık Artırma</option>
                    <option value="Esneklik">Esneklik</option>
                </select>
                <span asp-validation-for="Goal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ActivityLevel" class="control-label"></label>
                <select asp-for="ActivityLevel" class="form-control">
                    <option value="">Seçiniz</option>
                    <option value="Sedanter">Sedanter (Hareketsiz)</option>
                    <option value="Hafif">Hafif Aktif (Haftada 1-3 gün hafif egzersiz)</option>
                    <option value="Orta">Orta Aktif (Haftada 3-5 gün orta yoğunlukta egzersiz)</option>
                    <option value="Yüksek">Yüksek Aktif (Haftada 6-7 gün yoğun egzersiz)</option>
                </select>
                <span asp-validation-for="ActivityLevel" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" type="file" accept="image/*" />
                <small class="form-text text-muted">İsteğe bağlı: Fotoğraf yükleyebilirsiniz (şu an analiz edilmiyor, gelecekte eklenebilir)</small>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Öneri Al" class="btn btn-primary" />
            </div>
        </form>
    </div>

    @if (ViewBag.Recommendation != null)
    {
        var recommendation = ViewBag.Recommendation as FitnessCenterProject.Models.AIRecommendationResponse;
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>AI Önerileri</h4>
                </div>
                <div class="card-body">
                    @if (recommendation.CalculatedBMI.HasValue)
                    {
                        <div class="alert alert-info">
                            <strong>BMI:</strong> @recommendation.CalculatedBMI.Value.ToString("F2")<br />
                            <strong>Kategori:</strong> @recommendation.BMICategory
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(recommendation.Analysis))
                    {
                        <div class="mb-3">
                            <h5>Analiz</h5>
                            <p>@recommendation.Analysis</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(recommendation.ExerciseRecommendation))
                    {
                        <div class="mb-3">
                            <h5>Egzersiz Önerileri</h5>
                            <div class="bg-light p-3 rounded">
                                <pre style="white-space: pre-wrap; font-family: inherit;">@recommendation.ExerciseRecommendation</pre>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(recommendation.DietRecommendation))
                    {
                        <div class="mb-3">
                            <h5>Beslenme Önerileri</h5>
                            <div class="bg-light p-3 rounded">
                                <pre style="white-space: pre-wrap; font-family: inherit;">@recommendation.DietRecommendation</pre>
                            </div>
                        </div>
                    }

                    <div class="alert alert-warning mt-3">
                        <small>
                            <strong>Not:</strong> Bu öneriler genel bilgilendirme amaçlıdır. 
                            Sağlık sorunlarınız varsa mutlaka bir doktora veya beslenme uzmanına danışın.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
