<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenterProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenterProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <strong>ðŸ’ª Fitness Center</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Services" asp-action="Index">Services</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Trainers" asp-action="Index">Trainers</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="TrainerAvailabilities" asp-action="Index">Trainer Availabilities</a>
						</li>
						
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Member"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="MyAppointments">My Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="AIRecommendation" asp-action="Index">AI Fitness Ã–nerisi</a>
                            </li>
                        }
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin") || !User.IsInRole("Member"))
                        {
                        <li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Appointments</a>
						</li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Gyms" asp-action="Index">Gyms</a>
                         </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="TrainerServices" asp-action="Index">Trainer Services</a>
                         </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Pending">Pending Approvals</a>
                         </li>
						}
                                            
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 - Fitness Center Project | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
