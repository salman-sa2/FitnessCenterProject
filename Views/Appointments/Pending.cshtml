@model IEnumerable<FitnessCenterProject.Models.Appointment>

@{
    ViewData["Title"] = "Pending Appointments";
}

<h2>Pending Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Start</th>
            <th>End</th>
            <th>Gym</th>
            <th>Service</th>
            <th>Trainer</th>
            <th>User</th>
            <th>Price</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.StartTime</td>
                <td>@item.EndTime</td>
                <td>@item.Gym?.Name</td>
                <td>@item.Service?.Name</td>
                <td>@item.Trainer?.Name</td>
                <td>@item.User?.Email</td>
                <td>@item.Price</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a>
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId">Details</a>

                    <form asp-action="Approve" asp-route-id="@item.AppointmentId" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>

                    <form asp-action="Reject" asp-route-id="@item.AppointmentId" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
