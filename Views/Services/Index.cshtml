@model IEnumerable<FitnessCenterProject.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
{
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.ServiceId)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gym)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>
               @Html.DisplayFor(modelItem => item.ServiceId)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gym.Name)
            </td>
             @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServiceId">Edit</a> |
                         <a asp-action="Details" asp-route-id="@item.ServiceId">Details</a> |
                         <a asp-action="Delete" asp-route-id="@item.ServiceId">Delete</a>
                     </td>
                }
        </tr>
}
    </tbody>
</table>
